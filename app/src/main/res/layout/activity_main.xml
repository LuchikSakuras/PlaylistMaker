<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="@dimen/ten"
            android:padding="@dimen/twelve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="22sp"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/sixteen_dp"
        >


        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/one"
            android:layout_marginTop="@dimen/eight_dp"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:icon= "@drawable/light_mode"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            app:iconPadding="@dimen/eight_dp"/>


        <Button
            android:id="@+id/media_library"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:layout_weight="@dimen/one"
            android:backgroundTint="@color/white"
            android:text="@string/media_library"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:icon="@drawable/music"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/eight_dp"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/settings"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/one"
            android:backgroundTint="@color/white"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:icon= "@drawable/setting"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            app:iconPadding="@dimen/eight_dp"
            android:layout_marginBottom="@dimen/twelve"/>
    </LinearLayout>
</LinearLayout>