<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/setting_background_color"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <ImageView
            style="@style/backButtonIconsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/mainScreenTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:text="@string/settings"
            tools:ignore="ExtraText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <Switch
            style="@style/settingsButtonTextStyle"
            android:id="@+id/themeSwitcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_21"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:thumbTint="?attr/icon_switch_color"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_share_the_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <TextView
            style="@style/settingsButtonTextStyle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_21"
            android:layout_weight="1"
            android:text="@string/share_the_app" />

        <ImageView
            style="@style/settingsButtonIconsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <TextView
            style="@style/settingsButtonTextStyle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_21"
            android:layout_weight="1"
            android:text="@string/support" />

        <ImageView
            style="@style/settingsButtonIconsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_arrow_forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <TextView
            style="@style/settingsButtonTextStyle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_21"
            android:layout_weight="1"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/settingsButtonIconsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward" />
    </LinearLayout>

</LinearLayout>
