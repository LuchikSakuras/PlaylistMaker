<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.playlistmaker.ui.medialibrary.fragment.PlaylistsFragment">

    <Button
        style="@style/searchButtonsStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_gravity="center_horizontal"
        android:text="@string/new_playlist" />


    <ImageView
        android:id="@+id/placeholder_nothing_was_found"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="46dp"
        android:src="?attr/placeholder_smile"
        android:layout_gravity="center_horizontal"/>


    <TextView
        style="@style/searchTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_havent_created_any_playlists"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"/>


</LinearLayout>