<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/primaryLinerStyle">

    <LinearLayout
        android:id="@+id/button_back"
        style="@style/secondaryLinerStyle"
        android:gravity="start|center_vertical"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <ImageView
            style="@style/backButtonIconsStyle"/>

        <TextView
            style="@style/mainScreenTextStyle"
            android:layout_marginStart="@dimen/dp_8"
            android:text="@string/search_text"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        style="@style/secondaryLinerStyle"
        android:background="@drawable/round_corner"
        tools:ignore="ExtraText">

        <LinearLayout
            style="@style/secondaryLinerStyle">

            <ImageView
                style="@style/searchBarIconStyle"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_12"
                android:src="@drawable/search_icon"/>

            <EditText
                android:id="@+id/input_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_8"
                android:textSize="@dimen/sp_16"
                android:background="@null"
                android:lines="1"
                android:hint="@string/search_text"
                android:inputType="text"
                android:fontFamily="@font/ys_text_regular"
                android:textFontWeight="400"
                android:textColor="@color/black"
                android:textColorHint ="?attr/search_color"/>

            <ImageView
                android:id="@+id/clear_icon"
                android:layout_marginEnd="@dimen/dp_6"
                style="@style/searchBarIconStyle"
                android:gravity="center_vertical"
                android:src="@drawable/close"
                android:visibility="gone"
                />

        </LinearLayout>

    </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/artworkUrl100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
