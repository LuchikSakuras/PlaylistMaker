<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/setting_background_color"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <ImageView
            android:id="@+id/buttonBack"
            style="@style/backButtonIconsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/mainScreenTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:text="@string/search_text" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/round_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/searchBarIconStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/search_icon" />

            <EditText
                android:id="@+id/inputEditText"
                style="@style/searchEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:hint="@string/search_text"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:lines="1"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/clearIcon"
                style="@style/searchBarIconStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:gravity="center_vertical"
                android:src="@drawable/close"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_24" />

        <LinearLayout
            android:id="@+id/placeholder_no_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_110"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility = "visible">

            <ImageView
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/placeholder_no_internet" />

            <TextView
                android:id="@+id/b"
                style="@style/placeholderTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_internet"
                android:textAlignment="center" />

            <Button
                android:id="@+id/update_button"
                style="@style/updateButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/update"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nothing_was_found"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_110"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility = "visible">

            <ImageView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/placeholder_smile" />

            <TextView
                android:id="@+id/d"
                style="@style/placeholderTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/nothing_was_found" />

        </LinearLayout>


    </FrameLayout>

</LinearLayout>