<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backButtonIconsStyle">
        <item name="tint">?attr/icon_back_color</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_12</item>
    </style>

    <style name="settingsButtonIconsStyle">
        <item name="android:layout_marginEnd">@dimen/dp_18</item>
        <item name="tint">?attr/icon_color</item>
    </style>

    <style name="settingsButtonTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="mainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/dp_8</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="mainScreenTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="searchBarIconStyle">
        <item name="tint">?attr/search_color</item>
    </style>

    <style name="trackTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="trackInfoTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/text_info_color</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="searchEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/search_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="trackIconStyle">
        <item name="iconGravity">textStart</item>
        <item name="tint">?attr/icon_color</item>
    </style>

</resources>