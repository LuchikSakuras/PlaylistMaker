<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/dp_8</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="searchButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/black_to_white</item>
        <item name="android:textColor">?attr/white_to_black</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp_54</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="backButtonsStyle">
        <item name="tint">?attr/black_to_white</item>
        <item name="android:padding">@dimen/dp_12</item>
        <item name="android:background">@null</item>
    </style>

    <style name="playButtonsStyle">
        <item name="tint">?attr/black_to_white</item>
        <item name="contentDescription">@string/play</item>
    </style>

    <style name="settingsButtonIconsStyle">
        <item name="tint">?attr/grey_to_white</item>
    </style>


    <style name="title_text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="trackNameTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_22</item>
    </style>

    <style name="artistNameTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="timePlayTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="infoTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="forListTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/black_to_white</item>
    </style>

    <style name="trackInfoTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/grey_to_white</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="searchEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/grey_to_black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="searchTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_19</item>
    </style>


    <style name="trackIconStyle">
        <item name="iconGravity">textStart</item>
        <item name="tint">?attr/grey_to_white</item>
    </style>
</resources>